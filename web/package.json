{
  "name": "ai-news-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build:next": "next build",
    "build:worker": "opennextjs-cloudflare build --skipNextBuild",
    "build": "npm run build:next && npm run build:worker",
    "build:analyze": "ANALYZE=true npm run build:next",
    "preview": "npm run build && node scripts/wrangler.mjs dev --port 3000 --local --log-level warn --show-interactive-dev-session false",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\" \"**/*.md\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css}\" \"**/*.md\"",
    "typecheck": "tsc --noEmit --pretty",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:component": "vitest run --config=vitest.component.config.ts",
    "test:ci": "vitest run --coverage --reporter=json --reporter=html --run",
    "test:watch:coverage": "vitest --coverage --watch",
    "test:single": "vitest run",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:lighthouse": "playwright test --project=lighthouse",
    "cf-typegen": "node scripts/wrangler.mjs types",
    "d1:migrate:local": "node scripts/wrangler.mjs d1 execute ai_news_db --local --file=./src/lib/db/schema.sql",
    "d1:seed:local": "node scripts/wrangler.mjs d1 execute ai_news_db --local --file=./src/lib/db/seed.sql",
    "d1:migrate:prod": "wrangler d1 execute ai_news_db --file=./src/lib/db/schema.sql",
    "d1:migrate:perf": "node scripts/wrangler.mjs d1 execute ai_news_db --local --file=./migrations/performance_indexes.sql",
    "d1:migrations:status": "node scripts/wrangler.mjs d1 execute ai_news_db --command=\"SELECT * FROM _migrations ORDER BY applied_at DESC\"",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "commitlint": "commitlint --edit",
    "deploy": "npm run build && wrangler deploy",
    "deploy:staging": "npm run build && wrangler deploy --env staging",
    "rollback": "wrangler rollback",
    "health": "curl -sf http://localhost:3000/api/health | jq ."
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.1",
    "@vercel/og": "^0.8.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "0.0.23",
    "date-fns": "^4.1.0",
    "lucide-react": "0.562.0",
    "marked": "^15.0.4",
    "nanoid": "^5.1.5",
    "next": "^15.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sanitize-html": "^2.16.0",
    "schema-dts": "^1.1.5",
    "tailwind-merge": "^3.0.1",
    "web-vitals": "^4.2.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251201.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/eslintrc": "^3.2.0",
    "@next/bundle-analyzer": "15.5.9",
    "@opennextjs/cloudflare": "^1.8.0",
    "@playwright/test": "^1.49.1",
    "@tailwindcss/postcss": "^4.0.0",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/sanitize-html": "^2.11.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.18.0",
    "eslint-config-next": "^15.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.0.11",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "playwright": "^1.49.1",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "sort-package-json": "^2.10.1",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8",
    "wrangler": "^4.53.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
